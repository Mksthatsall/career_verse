{
  "manifest_version": 3,
  "name": "CareerVerse AI",
  "version": "1.0.0",
  "description": "Universal Career Assistant - Get guidance, learning paths, and build your resume across all career domains",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

